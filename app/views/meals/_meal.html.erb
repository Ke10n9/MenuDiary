<li id="meal-<%= meal.id %>">
  <span class="content">
    <%= meal.date %>
    <%= EatingTime.find_by(id: meal.eating_time_id).name %>
    <br>
    <% meal.dishes.each do |t| %>
      ・<%= t.name %><br>
    <% end %>
    <%= link_to "delete", meal, method: :delete,
                        data: { confirm: "本当に削除して良いですか？" } %>
  </span>
</li>
