<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4 col-xs-12">
      <section class="user_info">
        <div class="col-xs-6">
          <%= render 'shared/user_info' %>
        </div>
        <div class="col-xs-6">
          <%= form_with url: {controller: 'recommended_menus', action: 'show'},
                                          method: :get, local: true do |form| %>
            <%= form.submit "おすすめメニュー" %>
          <% end %>
        </div>
      </section>
      <section class="menu_form">
        <%= render 'shared/menu_registering_form' %>
      </section>
    </aside>
    <div class="col-md-8 col-xs-12">
      <% if current_user.meals.any? %>
        <ol class="menus">
          <%= render 'meals/meal' %>
        </ol>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Menu Diary</h1>
    <h2>
      This is the home page for the Menu Diary.
    </h2>
    <%= link_to "ユーザー登録", signup_path, class: "btn btn-lg btn-primary" %>
    <h2>
      ユーザーをお持ちの方は<%= link_to "Log in", login_path %>
    </h2>
  </div>
<% end %>
