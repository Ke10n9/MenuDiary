<%= form_for(@meal, url: meals_path, method: :post) do |f| %>
  <%= fields_for @dish do |i| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'shared/error_messages', object: i.object %>
    <div class="field">
      <%= f.label :date, "日付" %>
      <%= f.date_field :date, value: Time.now.strftime("%Y-%m-%d") %>
      <br>
      <%= f.label :eating_time_id, "朝昼夕" %>
      <%= f.select :eating_time_id, [["朝食", EatingTime.find_by(name: "朝食").id],
                                    ["昼食", EatingTime.find_by(name: "昼食").id],
                                    ["夕食", EatingTime.find_by(name: "夕食").id]] %>
      <br>
      <%= i.label :name, "品名" %>
      <%= i.text_field :name %>
    </div>
    <%= f.submit "送信", class: "btn btn-primary" %>
  <% end %>
<% end %>
